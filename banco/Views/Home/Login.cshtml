@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form class="position-absolute top-50 start-50 translate-middle">
        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Agency</label>
             <div class="col-sm-9">
                <input type="number" class="form-control" placeholder="Nº Agency">
             </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Account</label>
             <div class="col-sm-9">
                <input type="number" class="form-control" placeholder="Nº Account">
             </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">Password</label>
             <div class="col-sm-9">
                <input type="password" class="form-control" placeholder="Password">
             </div>
        </div>
        <div class="mb-4">
            <button class="btn btn-primary">Confirm</button> 
        </div>
        <label class="mb-1">Don't have an account?</label>
        <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#exampleModal">Register</button>
    </form>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Register New Client</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Name Client</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="Fullname">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">CPF</label>    
                            <div class="col-sm-9">
                                <input type="number" class="form-control" placeholder="CPF">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">RG</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" placeholder="RG">    
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="Address">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
</h1>